<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>商店名稱</th>
      <th>User</th>
      <th>狀態</th>
      <th>Reject reason</th>
      <th>Content</th>
      <th>Accepted at</th>
      <th>Finished at</th>
      <th>Order fee</th>
      <th>Delivery fee</th>
      <th>Items fee</th>
      <th>Tip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.store_name %></td>
        <td><%= order.user_id %></td>
        <td><%= order.status %></td>
        <td><%= order.reject_reason %></td>
        <td><%= order.content %></td>
        <td><%= order.accepted_at %></td>
        <td><%= order.finished_at %></td>
        <td><%= order.order_fee %></td>
        <td><%= order.delivery_fee %></td>
        <td><%= order.items_fee %></td>
        <td><%= order.tip %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

